{
  "private": true,
  "main": "index.js",
  "engines": {
    "node": ">=4.2.0",
    "npm": "^3.0.0"
  },
  "scripts": {
    "build": "node node_modules/webpack/bin/webpack --colors --display-error-details --config build/webpack.config.js",
    "clean": "rm -rf dist",
    "dev": "nodemon --exec npm run start-dev",
    "dev:init": "better-npm-run init-dev",
    "generate-backoffice-user": "node ./util/generateBackOfficeUser.js",
    "start": "better-npm-run start",
    "start-dev": "better-npm-run start-dev",
    "test": "better-npm-run test | bunyan",
    "test:dev": "better-npm-run test --watch | bunyan",
    "test:with-cobertura": "better-npm-run test-with-cobertura | bunyan",
    "test:build-report": "node_modules/nyc/bin/nyc.js report --reporter=cobertura && node_modules/nyc/bin/nyc.js report --reporter=lcov",
    "test:report": "better-npm-run test-report"
  },
  "betterScripts": {
    "init-dev": {
      "command": "node ./util/initDevEnvironment.js",
      "env": {
        "DATABASE_NAME": "dev",
        "DATABASE_PORT": 9400,
        "LDAP_PORT": 9300,
        "LDAP_LOGIN": "admin",
        "LDAP_PASSWORD": "admin",
        "NODE_ENV": "development"
      }
    },
    "start": {
      "command": "node node_modules/forever/bin/forever --minUptime 1000 --spinSleepTime 1000 -c \"node --harmony\" ./dist/bundle.js",
      "env": {
        "DATABASE_NAME": "mongodb",
        "NODE_ENV": "production",
        "PORT": 80
      }
    },
    "start-dev": {
      "command": "node ./src/index.js | bunyan",
      "env": {
        "DATABASE_NAME": "dev",
        "DATABASE_PORT": 9400,
        "LDAP_PORT": 9300,
        "LDAP_LOGIN": "admin",
        "LDAP_PASSWORD": "admin",
        "NODE_ENV": "development"
      }
    },
    "test-report": {
      "command": "node_modules/.bin/mocha --compilers js:babel-register --recursive -R xunit > test-reports.xml",
      "env": {
        "DATABASE_NAME": "test",
        "DATABASE_PORT": 9400,
        "LDAP_PORT": 9300,
        "PORT": 3001,
        "LDAP_LOGIN": "admin",
        "LDAP_PASSWORD": "admin",
        "NODE_ENV": "test",
        "NOTRACE": 1
      }
    },
    "test": {
      "command": "node_modules/.bin/mocha --compilers js:babel-register --recursive",
      "env": {
        "DATABASE_NAME": "test",
        "DATABASE_PORT": 9400,
        "LDAP_PORT": 9300,
        "PORT": 3001,
        "LDAP_LOGIN": "admin",
        "LDAP_PASSWORD": "admin",
        "NODE_ENV": "test"
      }
    },
    "test-with-cobertura": {
      "command": "node_modules/.bin/nyc node_modules/.bin/mocha --compilers js:babel-register --recursive",
      "env": {
        "DATABASE_NAME": "test",
        "DATABASE_PORT": 9400,
        "LDAP_PORT": 9300,
        "PORT": 3001,
        "LDAP_LOGIN": "admin",
        "LDAP_PASSWORD": "admin",
        "NODE_ENV": "test"
      }
    }
  },
  "dependencies": {
    "babel-register": "^6.24.1",
    "better-npm-run": "0.0.15",
    "body-parser": "^1.17.2",
    "bunyan": "^1.8.10",
    "cors": "^2.8.3",
    "express": "^4.15.3",
    "express-jwt": "^5.3.0",
    "forever": "^0.15.3",
    "fs": "0.0.1-security",
    "i18n": "^0.8.3",
    "jsonwebtoken": "^7.4.1",
    "ldapjs": "^1.0.1",
    "mongoose": "^4.10.4",
    "on-finished": "^2.3.0",
    "path": "^0.12.7",
    "qr-image": "^3.2.0",
    "sinon": "^2.3.2",
    "speakeasy": "^2.0.0",
    "stream-blackhole": "^1.0.3",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "async": "^2.4.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^3.5.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "mocha": "^3.4.1",
    "nodemon": "^1.11.0",
    "nyc": "^10.3.2",
    "supertest": "^3.0.0",
    "webpack": "^2.5.1"
  }
}
